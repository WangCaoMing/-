<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_softwaremanager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title_style"
        android:text="软件管理" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/layout_softwaremanager_tv_romfree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="@string/test_text"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/layout_softwaremanager_tv_SDfree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="@string/test_text"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_line" />

   <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include
            android:id="@+id/layout_softwaremanager_lv"
            layout="@layout/view_listview" />

        <TextView
            android:id="@+id/layout_softwaremanager_tv_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_light"
            android:text="@string/test_text"
            android:textColor="#fff"
            android:textSize="18sp" />
    </FrameLayout>

</LinearLayout>