<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/layout_trafficstate_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_vertical" 
        android:src="@drawable/ic_launcher_l"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        >
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginRight="5dp"
            >
            <TextView
                android:id="@+id/layout_trafficstate_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content" 
                android:layout_weight="3"
                android:text="heeeeeeeeeee"
                android:textSize="18sp"
                android:textColor="#000000"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/layout_trafficstate_tv_totaltraffic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1" 
                android:text="@string/test_text"
                android:textSize="18sp"
                android:textColor="#000000"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginRight="5dp"
            >
            <TextView
                android:id="@+id/layout_trafficstate_tv_rx"
                android:layout_width="0dp"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:text="heeeeeeeeeee"
              
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/layout_trafficstate_tv_tx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:text="@string/test_text"
                
                android:textColor="@color/grey"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
