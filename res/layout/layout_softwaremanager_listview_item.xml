<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/layout_softwaremanager_listview_item_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher" 
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:layout_width= "0dp"
        android:layout_height="match_parent"
        android:layout_weight="5" 
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/layout_softwaremanager_listview_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/layout_softwaremanager_listview_item_tv_isRom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textColor="#a000"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/layout_softwaremanager_listview_item_tv_size" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_text"
            android:textColor="#a000"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

   
</LinearLayout>
