<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/layout_clearcache_cacheitem_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_launcher_l" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/layout_clearcache_cacheitem_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/test_text"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/layout_clearcache_cacheitem_tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/test_text"
            android:textColor="#a000"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/layout_clearcache_cacheitem_iv_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/buttom_delete" />

</LinearLayout>