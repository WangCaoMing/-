<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/layout_set_location_site_tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/call_locate_blue"
        android:text="按住提示框拖到任意位置\n按手机返回键立即生效" 
        android:textSize="20sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/layout_set_location_site_tv_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拖我设置哦"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:background="@drawable/call_locate_orange"
        />
    <TextView
        android:id="@+id/layout_set_location_site_tv_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/call_locate_blue"
        android:text="按住提示框拖到任意位置\n按手机返回键立即生效" 
        android:textSize="20sp"
        android:gravity="center"
        />

</RelativeLayout>
