<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/layout_calldefender_item_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/test_text"
        android:textSize="20sp"
        android:textColor="#000"/>
    
    <!-- id的另一种写法 -->
    <TextView
        android:id="@id/layout_calldefender_item_tv_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/layout_calldefender_item_tv_number"
        android:textColor="#9000"
        android:textSize="17sp"
        android:text="@string/test_text"
        />
    <ImageView
        android:id="@id/layout_calldefender_item_iv_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/buttom_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        
          />

</RelativeLayout>
